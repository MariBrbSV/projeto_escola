<%- include('../includes/header.ejs', { titulo : 'Lista Alunos'}) %>

<main> 
    <h2> Adicionar novo aluno </h2>

    <form action="/alunos/novo" method="POST" class="form">
        <div class="form-group">
            <label for="nome_aluno"> Nome do aluno </label> 
            <input type="text" id="nome_aluno" name="nome_aluno" required>
        </div>

        <div class="form-group">
            <label for="telefone"> Idade </label> 
            <input type="text" id="idade" name="idade" required>
        </div>

        <div class="form-group">
            <label for="email"> E-mail </label> 
            <input type="text" id="email" name="email" required>
        </div>

        <div class="form-group">
            <label for="sexo"> Sexo </label> 
            <input type="text" id="sexo" name="sexo" required>
        </div>

        <div class="form-group">
            <label for="cpf"> CPF </label> 
            <input type="text" id="cpf" name="cpf" required>
        </div>



        <button type="submit" class="btn btn-primary"> Adicionar </button>
        <a href="/alunos" class="btn btn-secondary"> Cancelar </a>

    </form>
</main>

