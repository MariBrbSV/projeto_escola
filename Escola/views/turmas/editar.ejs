<%- include('../includes/header.ejs', { titulo : 'Lista Turmas'}) %>

<main> 
    <h2> Editando turma </h2>

    <form action="/turmas/<%= turma.id_turma%>/editar" method="POST" class="form">
        <div class="form-group">
            <label for="nome_turma"> Turma </label> 
            <input type="text" id="nome_turma" name="nome_turma" value="<%= turma.nome_turma%>" required>
        </div>

        <button type="submit" class="btn btn-primary"> Salvar alterações </button>
        <a href="/turmas" class="btn btn-secondary"> Cancelar </a>

    </form>
</main>

